COMPONENT_DEPENDS := \
	Graphics \
	RapidXML \
	malloc_count

HWCONFIG := basic-graphics
SPIFF_FILES :=
DISABLE_NETWORK := 1

GLOBAL_CFLAGS += -DENABLE_MALLOC_COUNT=1

RESOURCE_SCRIPT := resource/graphics.rc

# Can use sample for integration testing
CONFIG_VARS += MAX_LOOP_COUNT
ifdef MAX_LOOP_COUNT
GLOBAL_CFLAGS += -DMAX_LOOP_COUNT=$(MAX_LOOP_COUNT)
endif

#
CONFIG_VARS += GUITIMER_INTERVAL
GUITIMER_INTERVAL ?= 5000
GLOBAL_CFLAGS += -DGUITIMER_INTERVAL=$(GUITIMER_INTERVAL)

#
CONFIG_VARS += SHOWFONT_INTERVAL
SHOWFONT_INTERVAL ?= 1000
GLOBAL_CFLAGS += -DSHOWFONT_INTERVAL=$(SHOWFONT_INTERVAL)
